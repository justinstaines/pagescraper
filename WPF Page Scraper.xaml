<Window x:Class="WpfApp2variable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2variable"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas>
            <Canvas         Canvas.Top="50"         Canvas.Left="50">

                <Label Canvas.Left="10" Canvas.Top="10" Background="DodgerBlue" Content="{Binding Path=Hello}" Height="40" Width="100"></Label>

                <Label Canvas.Left="180" Canvas.Top="10" Background="DodgerBlue" Content="{Binding Path=Hello2}" Height="40" Width="100"></Label>

                <Label Canvas.Left="340" Canvas.Top="10" Background="DodgerBlue" Content="{Binding Path=Hello3}" Height="40" Width="100"></Label>
                

            </Canvas>

        </Canvas>

    </Grid>
</Window>
